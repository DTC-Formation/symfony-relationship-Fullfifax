{% extends 'base.html.twig' %}

{% block title %}Student index{% endblock %}

{% block body %}
    <h1>Student index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Uid</th>
                <th>Name</th>
                <th>Lot</th>
                <th>City</th>
                <th>CP</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Linkedin</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <td>{{ student.uid }}</td>
                <td>{{ student.name }}</td>
                <td>{{ student.address.lot }}</td>
                <td>{{ student.address.city }}</td>
                <td>{{ student.address.cp }}</td>
                <td>{{ student.contact.phone }}</td>
                <td>{{ student.contact.email }}</td>
                <td>{{ student.contact.linkedin }}</td>
                <td>
                    <a href="{{ path('app_student_show', {'uid': student.uid}) }}">show</a>
                    <a href="{{ path('app_student_edit', {'uid': student.uid}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_student_new') }}">Create new</a>
{% endblock %}
