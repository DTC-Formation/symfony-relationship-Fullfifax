{% extends 'base.html.twig' %}

{% block title %}Student{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card mt-4">
                    <div class="card-header">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex">
                                <a href="{{ path('app_student_index') }}">
                                    <img src="{{ asset('icons/back.png') }}" class="icon-small zoom" alt="back" />
                                </a>
                                <h2 class="card-title mt-1 mx-3">{{ student.name }}</h2>
                            </div>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('app_student_edit', {'uid': student.uid}) }}" class="btn btn-primary">Edit</a>
                                {{ include('student/_delete_form.html.twig') }}
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <p><strong>Uid:</strong> {{ student.uid }}</p>
                        <p><strong>Name:</strong> {{ student.name }}</p>
                        <p><strong>Lot:</strong> {{ student.address.lot }}</p>
                        <p><strong>City:</strong> {{ student.address.city }}</p>
                        <p><strong>CP:</strong> {{ student.address.cp }}</p>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h4>Experiences</h4>
                    </div>
                    <div class="card-body">
                        <ul>
                            {% for experience in student.experiences %}
                                <li>
                                    <strong>
                                        {{ experience.startDate|date('Y-m-d') }} -
                                        {% if experience.endDate != 'N/A' %}
                                            {{ experience.endDate|date('Y-m-d') }}
                                        {% else %}
                                                N/A
                                        {% endif %}
                                    </strong>
                                    <br>
                                    {{ experience.post }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

                <div class="card mt-4">
                    <div class="card-header">
                        <h4>Educations</h4>
                    </div>
                    <div class="card-body">
                        <ul>
                            {% for education in student.educations %}
                                <li>
                                    <strong>{{ education.date|date('Y-m-d') }}</strong>
                                    <br>
                                    {{ education.diploma }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock %}